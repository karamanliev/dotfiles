{
  "$schema": "configSchema.json",
  "layer": "overlay",
  "control-center-margin-bottom": 20,
  "control-center-margin-left": 0,
  "control-center-margin-right": 8,
  "control-center-margin-top": 0,
  "control-center-width": 500,
  "notification-window-width": 500,
  "control-center-height": 900,
  "cssPriority": "application",
  "control-center-positionX": "right",
  "control-center-positionY": "top",
  "fit-to-screen": false,
  "hide-on-action": true,
  "hide-on-clear": true,
  "image-visibility": "always",
  "keyboard-shortcuts": true,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "notification-icon-size": 40,
  "notification-inline-replies": true,
  "positionX": "right",
  "positionY": "top",
  "script-fail-notify": true,
  "scripts": {},
  "timeout": 8,
  "timeout-critical": 0,
  "timeout-low": 5,
  "transition-time": 100,
  "widget-config": {
    "buttons-grid": {
      "actions": [
        {
          "active": false,
          "command": "notify-send 'hey'",
          "label": "󰤄",
          "type": "toggle",
          "update_command": "notify-send 'Hi'"
        },
        {
          "active": false,
          "command": "swaync-client -d",
          "label": "",
          "type": "toggle"
        },
        {
          "active": false,
          "command": "obs",
          "label": "󰄀",
          "type": "button"
        },
        {
          "active": false,
          "label": "󰕧",
          "type": "button",
          "command": "screen-record start DP-3"
        },
        {
          "active": false,
          "label": "S",
          "type": "button",
          "command": "screen-record stop"
        },
        {
          "active": false,
          "command": "ags -t powermenu",
          "label": "",
          "type": "button"
        }
      ]
    },
    "mpris": {
      "image-radius": 12,
      "image-size": 96
    },
    "title": {
      "text": "Notifications",
      "button-text": "󰎟 Clear",
      "clear-all-button": true
    },
    "volume": {
      "label": "",
      "show-per-app": true,
      "show-per-app-icon": true,
      "show-per-app-label": true
    }
  },

  "widgets": ["title", "notifications", "dnd", "inhibitors"]
}
