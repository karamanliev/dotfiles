export EDITOR="nvim"
export VISUAL="nvim"

export IS_MACOS

if [[ $(uname) == "Darwin" ]] && type brew &>/dev/null; then
	IS_MACOS=true
else
	IS_MACOS=false
fi

export HISTFILE=$ZSH_MODULES/zsh-history
export HISTSIZE=1000000
export SAVEHIST=1000000

# Open man pages with nvim
export MANPAGER='nvim +Man!'

# Default fzf options
export FZF_DEFAULT_OPTS="${FZF_DEFAULT_OPTS:+$FZF_DEFAULT_OPTS }--height 60% --preview 'bat -n --style=full --color=always {}' --preview-window hidden --bind ctrl-/:toggle-preview --bind alt-j:preview-down,alt-k:preview-up --bind alt-n:preview-down,alt-p:preview-up"

# View full path in preview window (?)
export FZF_ALT_C_OPTS="${FZF_ALT_C_OPTS:+$FZF_ALT_C_OPTS }--preview 'echo {}' --preview-window down:5:hidden:wrap --bind 'ctrl-/:toggle-preview'"

# View full command in preview window (?)
export FZF_CTRL_R_OPTS="${FZF_CTRL_R_OPTS:+$FZF_CTRL_R_OPTS }--preview 'echo {}' --preview-window down:5:hidden:wrap --bind 'ctrl-/:toggle-preview'"
