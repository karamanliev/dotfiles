# Open hist_delete_fzf
zle -N hist_delete_fzf
bindkey '^[r' hist_delete_fzf

# edit in vim buffer
autoload edit-command-line; zle -N edit-command-line
bindkey -M vicmd "^v" edit-command-line

# Use vim keys in tab complete menu
# bindkey -M menuselect 'h' vi-backward-char
# bindkey -M menuselect 'j' vi-down-line-or-history
# bindkey -M menuselect 'k' vi-up-line-or-history
# bindkey -M menuselect 'l' vi-forward-char

bindkey '^P' history-search-backward
bindkey '^N' vi-down-line-or-history

bindkey '^L' vi-forward-char
bindkey '^H' vi-backward-char

bindkey '^B' vi-backward-word
bindkey '^W' vi-forward-word

bindkey '^[h' backward-delete-char
bindkey '^[l' delete-char

bindkey '^[b' backward-delete-word
bindkey '^[w' kill-word

bindkey '^A' vi-beginning-of-line
bindkey '^E' vi-end-of-line

bindkey '^U' vi-kill-eol
bindkey '^K' backward-kill-line

bindkey '^Y' clear-screen
# This makes Tab and ShiftTab, when pressed on the command line, enter the menu instead of inserting a completion:
bindkey '^I' menu-select
bindkey '$terminfo[kcbt]' menu-select
bindkey '^N' menu-select
bindkey '^J' menu-select

# Fix backspace bug when switching modes
bindkey "^?" backward-delete-char

# Accept the autosuggestion with ctrl + spacebar
bindkey '^ ' autosuggest-accept
