# Lazy load NVM for fast shell start
export NVM_DIR="$HOME/.nvm"
export BREW_NVM_DIR="$(brew --prefix)/opt/nvm"
nvm() {
  unset -f nvm
  [ -s "$BREW_NVM_DIR/nvm.sh" ] && \. "$BREW_NVM_DIR/nvm.sh" # This loads nvm
  nvm $@ # This copies arguments after nvm
}

# Ruby 3.2.2
export PATH="$(brew --prefix)/opt/ruby@3.2/bin:$PATH"

# Gradle 8.4
export GRADLE_HOME=/usr/local/gradle
export PATH=$GRADLE_HOME/bin:$PATH

# Android SDK
export ANDROID_HOME=$HOME/Library/Android/sdk
export ANDROID_SDK_ROOT=$HOME/Library/Android/sdk
export ANDROID_AVD_HOME=$HOME/.android/avd

# ADB
export PATH=$PATH:$ANDROID_HOME/platform-tools
